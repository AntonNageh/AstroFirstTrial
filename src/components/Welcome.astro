    <video src="/src/assets/water.mp4" autoplay loop muted class="absolute w-full h-full object-cover"></video>
    <div class="left-1/2">
        <h1 class="bubbleText">Click</h1>
        <br/><br/>
        <h1 class="bubbleText">The Fish</h1>
        <br/><br/>
        <h1 class="bubbleText">To see More info</h1>
    </div>
    <img src="https://www.sliderrevolution.com/wp-content/uploads/revslider/Seafood-Store-Template/salmon-1.png" alt="" class="cursor-pointer z-30 top-1/2 clip-right -translate-x-1/2 scale-200 md:scale-200 lg:scale-100 md:-translate-x-1/2 -translate-y-1/2 absolute" id="sliderButton2">
   </div>
</div>
<div class="bg-[#e6e0c6] -mt-2 container-fluid h-full relative">
    <h1>Test</h1>
</div>
<script>
    let sliderButton = document.getElementById("sliderButton");
    let sliderButton2 = document.getElementById("sliderButton2");
    let rightSlide = document.getElementById("rightSlide");
    [sliderButton, sliderButton2].forEach(button => {
    button?.addEventListener("click", () => {
        rightSlide?.classList.toggle("show");
    })
    })
    setTimeout(() => {
    rightSlide?.classList.add("show");
    }, 500);
    let textContainer = document.querySelector(".text-container");
    sliderButton?.addEventListener("click", () => {
    textContainer?.classList.toggle("appear");
    });
  </script>
